<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grey_border"
    android:id="@+id/symptom_layout">


        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="4dp"
            android:id="@+id/orange_tick"
            android:src="@drawable/avatar_select"
            android:visibility="invisible"
            />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:paddingTop="2dp"
            android:src="@drawable/avatarboy_1"
            android:id="@+id/symptom_img"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text="Increased\nThirst"
            android:textColor="@color/white"
            android:gravity="center"

            android:layout_below="@+id/symptom_img"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/symptom_text"/>

</RelativeLayout>