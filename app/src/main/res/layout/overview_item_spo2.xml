<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ripple"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:minHeight="@dimen/overview_min_height">
    <ImageView
        android:id="@+id/image_item_type"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_blood_glucose"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:adjustViewBounds="true"/>

    <ImageView
        android:id="@+id/image_navigate"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="end|center_vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        android:src="@drawable/measurement_list_next"
        android:adjustViewBounds="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@+id/image_item_type"
        android:layout_marginStart="40dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/text_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="110"
            android:singleLine="true"
            android:textSize="@dimen/font_display_1"
            android:layout_centerVertical="true"
            android:textColor="@color/black_87"
            android:layout_alignParentStart="true"
            />
<!--  android:layout_toStartOf="@+id/separator"-->

        <View
            android:id="@+id/separator"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/text_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8sp"
            android:layout_alignBaseline="@+id/text_value"
            android:singleLine="true"
            android:gravity="start"
            android:text="%"
            android:textSize="@dimen/font_title"
            android:textColor="@color/black_54"
            android:layout_toEndOf="@id/text_value"
            />

        <TextView
            android:id="@+id/text_value2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="8dp"
            android:text="22"
            android:singleLine="true"
            android:textSize="@dimen/font_display_1"
            android:layout_centerVertical="true"
            android:textColor="@color/black_87"
            android:layout_toEndOf="@id/text_unit"
            />

        <TextView
            android:id="@+id/text_unit2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8sp"
            android:layout_alignBaseline="@+id/text_value"
            android:singleLine="true"
            android:gravity="start"
            android:text="bpm"
            android:textSize="@dimen/font_title"
            android:textColor="@color/black_54"
            android:layout_toEndOf="@id/text_value2"
            />
        <!--  android:layout_toEndOf="@+id/separator"-->
    </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/text_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="end|bottom"
        android:gravity="end|bottom"
        android:text="22 Aug 2016 11:31"
        android:textColor="@color/light_gray"
        android:textSize="@dimen/timeline_time_text_size"
        android:textStyle="italic"
        android:textAllCaps="true"
        android:layout_marginEnd="15dp"/>

</LinearLayout>

