    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/date_selector_height"
        android:layout_marginBottom="2dp"
        android:gravity="center"
        android:background="@color/colorPrimaryGreen"
        >
        <ImageView
            android:id="@+id/image_previous"
            android:layout_width="@dimen/calendar_nav_icon_size"
            android:layout_height="@dimen/calendar_nav_icon_size"
            android:layout_centerVertical="true"
            android:layout_marginStart="4dp"
            android:layout_alignParentStart="true"
            android:padding="8dp"
            android:src="@drawable/ic_prev_white"
            />

        <ImageView
            android:id="@+id/image_next"
            android:layout_width="@dimen/calendar_nav_icon_size"
            android:layout_height="@dimen/calendar_nav_icon_size"
            android:layout_centerVertical="true"
            android:layout_marginEnd="4dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_next_white"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/text_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="30 May, Mon"
            android:textSize="@dimen/font_subheading"
            android:textStyle="bold"
            android:textColor="@color/white"
            />

    </RelativeLayout><!--
</android.support.v7.widget.CardView>-->