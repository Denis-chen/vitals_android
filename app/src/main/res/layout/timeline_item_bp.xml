<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/timeline_margin_top"
    android:layout_marginBottom="@dimen/timeline_margin_bottom"
    android:layout_margin="2dp"
    android:background="@drawable/ripple"
    card_view:cardCornerRadius="8dp"
    card_view:cardPreventCornerOverlap="false"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="@dimen/timeline_min_height"
        android:background="@drawable/ripple_bp"
        >

        <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/round_rect_left_orange"
            android:text="11:30"
            android:textColor="@color/white"
            android:textSize="@dimen/timeline_time_text_size"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:minHeight="@dimen/timeline_min_height"
            />

        <TextView
            android:id="@+id/text_bp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:text="110 mg/dL"
            android:textSize="@dimen/timeline_body_text_size"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textColor="@color/black_54"
            android:layout_toEndOf="@id/text_time"
            />

        <TextView
            android:id="@+id/text_arterial"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:padding="8dp"
            android:text="Arterial Pressure"
            android:textSize="@dimen/timeline_body_text_size"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textColor="@color/black_54"
            android:layout_toEndOf="@id/text_bp"
            />

        <TextView
            android:id="@+id/text_pulse"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:text="Pulse Rate"
            android:textSize="@dimen/timeline_body_text_size"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textColor="@color/black_54"
            android:layout_toEndOf="@id/text_arterial"
            />

        <ImageView
            android:id="@+id/image_caution"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:src="@drawable/ic_caution"
            android:adjustViewBounds="true"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>