<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/phone_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/img_android_phone"/>

    <ImageView
        android:id="@+id/signal_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/phone_image"
        android:src="@mipmap/img_signal"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:layout_toRightOf="@id/signal_image"
        android:src="@mipmap/img_medisafe_fit"
        android:layout_marginLeft="16dp" />

    <ImageView
        android:id="@+id/result_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/signal_image"
        android:src="@mipmap/ic_connected"
        android:layout_marginLeft="58dp"
        android:paddingTop="12dp"/>

</RelativeLayout>