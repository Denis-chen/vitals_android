<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="13dp"
        card_view:cardPreventCornerOverlap="false"
        android:elevation="100dp"
        card_view:cardBackgroundColor="@color/colorPrimaryYellow"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/dateAndTimeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:background="@drawable/round_rect_top"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="8th May, 2010"
                    android:textColor="@android:color/black"
                    style="@style/Base.TextAppearance.AppCompat.Medium"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/dateAndTimeLayout"
                android:layout_centerHorizontal="true"
                android:paddingBottom="10dp"
                android:gravity="center|bottom"
                >

                <TextView
                    android:id="@+id/glucoseValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="110"
                    android:textSize="35sp"
                    android:textColor="@android:color/white"
                    />

                <TextView
                    android:id="@+id/unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mg/dL"
                    android:gravity="bottom"
                    android:textColor="@android:color/white"
                    />

            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>