<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:weightSum="4"
        >
        <ImageView
            android:id="@+id/button_reading"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_bloodglucose"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            />
        <ImageView
            android:id="@+id/button_medication"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_medication"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/button_photo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_takephoto"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/button_symptom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_symptom"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            />

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        card_view:cardCornerRadius="4dp"
        card_view:cardPreventCornerOverlap="true"
        android:layout_margin="2dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/image_previous"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:src="@drawable/ic_previous"
                android:layout_alignParentLeft="true"
                android:padding="8dp"
                />

            <ImageView
                android:id="@+id/image_next"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:src="@drawable/ic_next"
                android:layout_alignParentRight="true"
                android:padding="8dp"
                />

            <TextView
                android:id="@+id/text_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/image_next"
                android:layout_toRightOf="@id/image_previous"
                android:gravity="center"
                android:text="30 May, Mon"
                android:textSize="@dimen/font_subheading"
                android:textColor="@color/black_54"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
<!--
    <include
        layout="@layout/fragment_timeline"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />-->
</LinearLayout>