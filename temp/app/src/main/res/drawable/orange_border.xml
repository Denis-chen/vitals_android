<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="6dp"/>
            <solid   android:color="@color/white"/>
            <stroke  android:width="2dip" android:color="@color/color_orange" />
        </shape>
    </item>
    <item android:top="75dp">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="0.01dp"
                android:topRightRadius="0.01dp"
                android:bottomLeftRadius="6dp"
                android:bottomRightRadius="6dp"/>

            <solid   android:color="@color/color_orange"/>
            <stroke  android:width="0.5dip" android:color="@color/color_orange" />
        </shape>
    </item>

</layer-list>